{
    "rulesDirectory": "./src",
    "rules": {
        "boolean-trivia": true,
        "class-name": true,
        "comment-format": [true,
            "check-space"
        ],
        "indent": [true,
            "spaces"
        ],
        "jsdoc-format": true,
        "linebreak-style": [true, "CRLF"],
        "next-line": [true,
            "check-catch",
            "check-else"
        ],
        "no-bom": true,
        "no-in-operator": true,
        "no-increment-decrement": true,
        "no-inferrable-types": true,
        "no-internal-module": true,
        "no-null-keyword": true,
        "no-switch-case-fall-through": true,
        "no-trailing-whitespace": [false, "ignore-template-strings"],
        "no-type-assertion-whitespace": false,
        "no-var-keyword": false,
        "object-literal-surrounding-space": true,
        "one-line": [false,
            "check-open-brace",
            "check-whitespace"
        ],
        "prefer-const": false,
        "quotemark": [false,
            "double",
            "avoid-escape"
        ],
        "semicolon": [false, "never", "ignore-bound-class-methods"],
        "triple-equals": false,
        "type-operator-spacing": false,
        "typedef-whitespace": [
            false,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            },
            {
                "call-signature": "onespace",
                "index-signature": "onespace",
                "parameter": "onespace",
                "property-declaration": "onespace",
                "variable-declaration": "onespace"
            }
        ],
        "whitespace": [false,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-type"
        ]	
	}
}